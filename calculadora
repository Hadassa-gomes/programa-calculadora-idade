def obter_nome():
    
    
    
    nome = input("Digite seu nome completo: ")
    return nome

def obter_ano_nascimento():
    
    while True:
        try:
            ano_nascimento = int(input("Digite seu ano de nascimento (entre 1922 e 2021): "))
            if 1922 <= ano_nascimento <= 2021:
                return ano_nascimento
            else:
                print("Ano inv치lido! O ano deve estar entre 1922 e 2021.")
        
            print("Entrada inv치lida! Por favor, insira um ano v치lido.")

def calcular_idade(ano_nascimento, ano_atual=2022):
  
    
    return ano_atual - ano_nascimento

def main():
  
    nome = obter_nome()
    ano_nascimento = obter_ano_nascimento()
    idade = calcular_idade(ano_nascimento)
    
    print(f"\nNome do usu치rio: {nome}")
    print(f"Idade em {2022}: {idade} anos")


main()
